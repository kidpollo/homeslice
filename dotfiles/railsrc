def sql(query)
  ActiveRecord::Base.connection.select_all(query)
end

def loud_logger
  set_logger_to Logger.new(STDOUT)
end

IRB.conf[:IRB_RC] = Proc.new do
  def sql(query)
    ActiveRecord::Base.connection.select_all(query)
  end

  def loud_logger
    set_logger_to Logger.new(STDOUT)
  end

  def quiet_logger
    set_logger_to nil
  end

  def set_logger_to(logger)
    ActiveRecord::Base.connection.instance_variable_set(:@logger, logger)
  end
end
