escape "^Ll"
defutf8 on

autodetach      on

startup_message off
vbell           off
activity        "%c activity -> %n%f %t"
defmonitor      on

defscrollback   10000
silencewait     15

bind ~ activity "%c activity -> %n%f %t"
bind * activity "%c activity -> %n%f %t"
bind b eval     "writebuf" "exec sh -c 'pbcopy < /tmp/screen-exchange'"

shell zsh
